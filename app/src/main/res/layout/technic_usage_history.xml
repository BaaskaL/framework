<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mn.odoo.addons.technic.tabs.TechnicDocuments">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <odoo.controls.OForm
            android:id="@+id/technicUsageHistoryForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:modelName="technic.usage.history">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#247648"
                android:divider="?android:attr/dividerHorizontal"
                android:orientation="horizontal"
                android:padding="@dimen/default_8dp"
                android:showDividers="middle">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/default_8dp"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_normal"
                    android:gravity="center"
                    android:text="Өөрчлөгдсөн хэмжигдэхүүн"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@string/font_normal"
                    android:gravity="center"
                    android:text="Хэмжих нэгж"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@string/font_normal"
                    android:gravity="center"
                    android:text="Ө/утга"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.7"
                    android:fontFamily="@string/font_normal"
                    android:gravity="center"
                    android:text="Өөрчлөгдсөн огноо"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_normal"
                    android:gravity="center"
                    android:text="Өөрчилсөн хэрэглэгч"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.5"
                    android:fontFamily="@string/font_normal"
                    android:gravity="center"
                    android:text="Тайлбар"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>

            <odoo.controls.ExpandableListControl
                android:id="@+id/ExpandListUsageHistoryLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_8dp"
                android:layout_marginTop="@dimen/default_8dp"
                android:orientation="vertical" />
        </odoo.controls.OForm>

    </ScrollView>

</RelativeLayout>