<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/default_16dp"
    android:paddingRight="@dimen/default_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#247648"
            android:divider="?android:attr/dividerHorizontal"
            android:orientation="horizontal"
            android:padding="@dimen/default_8dp"
            android:showDividers="middle">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/default_16dp"
                android:layout_weight="1"
                android:fontFamily="@string/font_normal"
                android:gravity="center"
                android:text="Техникийн үзлэгийн зүйл"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:clickable="false"
                        android:fontFamily="@string/font_normal"
                        android:text="Хэвийн"
                        android:textColor="@color/body_text_1"
                        android:textSize="@dimen/text_size_medium" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:fontFamily="@string/font_normal"
                        android:text="Хэвийн бус"
                        android:textColor="@color/body_text_1"
                        android:textSize="@dimen/text_size_medium" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@string/font_normal"
                android:gravity="center"
                android:text="Үзлэгийн тайлбар"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </LinearLayout>
</LinearLayout>
