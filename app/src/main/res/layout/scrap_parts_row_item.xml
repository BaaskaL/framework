<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/customerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_8dp"
        android:paddingLeft="@dimen/default_8dp"
        android:paddingRight="@dimen/default_16dp"
        android:paddingTop="@dimen/default_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPartName"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@string/font_normal"
                android:text="selbeg"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/body_text_1"></TextView>

            <TextView
                android:id="@+id/tvTechnicName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:fontFamily="@string/font_normal"
                android:text="tehnik ner"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/body_text_2"></TextView>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:fontFamily="@string/font_normal"
                android:text="ognoo"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/body_text_2"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>