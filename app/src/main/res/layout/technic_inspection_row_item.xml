<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_8dp"
        android:paddingLeft="@dimen/default_8dp"
        android:paddingRight="@dimen/default_16dp"
        android:paddingTop="@dimen/default_8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inspection_origin"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:fontFamily="@string/font_normal"
                    android:gravity="center"
                    android:text="Үзлэгийн дугаар"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/body_text_1"></TextView>

                <TextView
                    android:id="@+id/technic_name"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:fontFamily="@string/font_normal"
                    android:gravity="center"
                    android:text="Техник"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/body_text_1"></TextView>

                <TextView
                    android:id="@+id/inspection_respondent_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:fontFamily="@string/font_normal"
                    android:gravity="center"
                    android:text="Жолооч"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/body_text_1"></TextView>

                <TextView
                    android:id="@+id/inspection_create_date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:fontFamily="@string/font_normal"
                    android:gravity="center"
                    android:text="Бүртгэсэн огноо"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/body_text_1"></TextView>


                <TextView
                    android:id="@+id/inspection_state"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:fontFamily="@string/font_normal"
                    android:gravity="center"
                    android:text="Төлөв"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/body_text_1"></TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

