<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/dividerHorizontal"
        android:orientation="horizontal"
        android:padding="@dimen/default_8dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/inspection_origin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.11"
            android:fontFamily="@string/font_normal"
            android:gravity="center"
            android:padding="3dp"
            android:text="Үзлэгийн дугаар"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/android_red" />

        <TextView
            android:id="@+id/technic_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:fontFamily="@string/font_normal"
            android:gravity="center"
            android:padding="3dp"
            android:text="Техник"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/android_red" />

        <TextView
            android:id="@+id/inspection_respondent_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.13"
            android:fontFamily="@string/font_normal"
            android:gravity="center"
            android:padding="3dp"
            android:text="Жолооч"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/android_red" />

        <TextView
            android:id="@+id/inspection_create_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:fontFamily="@string/font_normal"
            android:gravity="center"
            android:padding="3dp"
            android:text="Бүртгэсэн огноо"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/android_red" />


        <TextView
            android:id="@+id/inspection_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:fontFamily="@string/font_normal"
            android:gravity="center"
            android:padding="3dp"
            android:text="State"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/android_red" />

        <TextView
            android:id="@+id/inspection_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.13"
            android:fontFamily="@string/font_normal"
            android:gravity="center"
            android:padding="3dp"
            android:text="Inspection type"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/android_red" />

    </LinearLayout>
</LinearLayout>

